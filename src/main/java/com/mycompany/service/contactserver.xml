<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:ws= "http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://jax-ws.dev.java.net/spring/core http://jax-ws.dev.java.net/spring/core.xsd
http://jax-ws.dev.java.net/spring/servlet http://jax-ws.dev.java.net/spring/servlet.xsd"
      >
	<import resource="testData.xml" />

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>org.hsqldb.jdbcDriver</value>
		</property>
		<property name="url">
			<value>jdbc:hsqldb:mem:contactdb</value>
		</property>
		<property name="username">
			<value>sa</value>
		</property>
		<property name="password">
			<value></value>
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="mappingResources">
			<list>
				<value>com/mycompany/Contact.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.cglib.use_reflection_optimizer">true</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<bean id="jdbcExceptionTranslator" class="org.springframework.jdbc.support.SQLErrorCodeSQLExceptionTranslator"> 
		<property name="dataSource"><ref bean="dataSource"/></property> 
	</bean>

	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
		<property name="jdbcExceptionTranslator">
			<ref bean="jdbcExceptionTranslator" />
		</property>
	</bean>

	<bean id="contactDAOHibernate" class="com.mycompany.dao.ContactDAOHibernate">
		<property name="hibernateTemplate"><ref bean="hibernateTemplate"/></property>
	</bean>
	<bean id="contactDAOJDBC" class="com.mycompany.dao.ContactDAOJDBC"/>

<!--  	Comment this contactDAOClient definition when your using logger -->
	<bean id="contactDAOClient" class="com.mycompany.client.ContactDAOClient">
		<property name="contactDAO">
			<ref local="contactDAOJDBC"/>
		</property>
	</bean>

	<bean id="contactDao" class="com.mycompany.dao.ContactDAOHibernate">
		<property name="hibernateTemplate">
			<ref bean="hibernateTemplate" />
		</property>
	</bean>
	
	<bean id="contactApp" class="com.mycompany.ContactAppImpl">
		<property name="contactDao">
			<ref bean="contactDao" />
		</property>
	</bean>

	<bean id="simplecontactApp" class="com.mycompany.SimpleContactAppImpl">
		<property name="contactDao">
			<ref bean="contactDao" />
		</property>
	</bean>
	
	<bean id="contactWebserviceServer" class="com.mycompany.service.ContactWebserviceServer">
		<property name="contactList">
            <list>
                <ref bean="contact1"/>
                <ref bean="contact2"/>
                <ref bean="contact3"/>
            </list>
		</property>
	
	</bean>

	<!-- using the jdk -->
	<bean class="org.springframework.remoting.jaxws.SimpleJaxWsServiceExporter">
	    <property name="baseAddress" value="http://localhost:8081/"/>
	</bean>
	
	<!-- <bean id="contactAppServiceEndpoint" class="com.mycompany.service.ContactAppServiceEndpoint">
	    <property name="biz">
	    	<ref bean="contactApp"/>
	    </property>
	</bean> -->
	
	
	
	
	
</beans>